procedure TFormProperty.EditAddKeysKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
var s, KeyStr: string;
begin   
  if Key = 229 then Exit;
  s := EditAddKeys.Text;
  KeyStr := VKeyToKeyStr(Key);
  s := s + KeyStr + ',';
  EditAddKeys.Text := s;
end;

procedure TFormProperty.ButtonClearAddKeysClick(Sender: TObject);
begin
  EditAddKeys.Clear;
  EditAddKeys.SetFocus;
end;

